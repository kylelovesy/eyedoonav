{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "functions/node_modules",
    "functions/lib",
    "babel.config.js",
    "eslint.config.js",
    "jest.setup.js",
    "metro.config.js",
    "tsconfig.json",
    "dist",
    "build",
    "coverage",
    "lib",
    "generated"
  ]
}
